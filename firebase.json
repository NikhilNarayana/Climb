{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix ./functions/ run lint"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "rewrites" : [{
      "source": "/hello",
      "function": "hello"
    }],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
